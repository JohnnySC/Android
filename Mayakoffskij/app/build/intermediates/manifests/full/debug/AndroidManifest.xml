<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="github.johnnysc.mayakoffskij"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="github.johnnysc.mayakoffskij.StartScreenActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="github.johnnysc.mayakoffskij.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="github.johnnysc.mayakoffskij.PoemView"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="github.johnnysc.mayakoffskij.FoundPoemView"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="github.johnnysc.mayakoffskij.SearchResultsList"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="github.johnnysc.mayakoffskij.FavoritePoems"
            android:configChanges="orientation|screenSize" >
        </activity>
    </application>

</manifest>