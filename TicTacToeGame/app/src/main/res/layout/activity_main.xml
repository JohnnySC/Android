<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/background"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".MainActivity">

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/cell0"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:src="@drawable/empty" />

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/cell1"
android:src="@drawable/empty"
    android:layout_alignTop="@+id/cell0"
    android:layout_toRightOf="@+id/cell0"
    android:layout_toEndOf="@+id/cell0" />

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/cell2"
android:src="@drawable/empty"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/cell1"
    android:layout_toEndOf="@+id/cell1" />

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/cell3"
android:src="@drawable/empty"
android:layout_below="@+id/cell0"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true" />

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/cell4"
android:src="@drawable/empty"
    android:layout_alignTop="@+id/cell3"
    android:layout_alignLeft="@+id/cell1"
    android:layout_alignStart="@+id/cell1" />

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/cell5"
android:src="@drawable/empty"
    android:layout_below="@+id/cell1"
    android:layout_toRightOf="@+id/cell1"
    android:layout_toEndOf="@+id/cell1" />

<ImageButton
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/cell6"
android:src="@drawable/empty"
    android:layout_below="@+id/cell3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cell7"
        android:src="@drawable/empty"
        android:layout_below="@+id/cell3"
        android:layout_alignLeft="@+id/cell4"
        android:layout_alignStart="@+id/cell4" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cell8"
        android:src="@drawable/empty"
        android:layout_below="@+id/cell4"
        android:layout_toRightOf="@+id/cell4"
        android:layout_toEndOf="@+id/cell4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player 1"
        android:id="@+id/textView"
        android:layout_below="@+id/cell6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
