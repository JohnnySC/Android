<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.johnnysc.yandextranslator.MainActivity">

    <EditText
        android:id="@+id/input_edit_text"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:hint="@string/input_hint"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/result_text_view"
        android:layout_alignStart="@+id/result_text_view" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="56dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_above="@+id/button"
        android:layout_below="@+id/input_edit_text" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/translate"
        android:layout_alignRight="@+id/result_text_view"
        android:layout_alignEnd="@+id/result_text_view"
        android:layout_alignLeft="@+id/result_text_view"
        android:layout_alignStart="@+id/result_text_view" />

</RelativeLayout>
